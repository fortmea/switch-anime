{
  "compilerOptions": {
    "target": "es2022",
    "moduleResolution": "node",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "nxjs-runtime"
    ],
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*.ts",
    "src/widgets/grid.ts",
    "src/**/*.swf"
  ]
}